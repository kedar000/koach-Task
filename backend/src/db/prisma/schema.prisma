generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" 
  url      = "postgresql://admin:adminpassword@localhost:5432/user_management"
}

model User {
  id        String  @id @default(uuid()) 
  name      String  
  email     String  @unique // Ensures email uniqueness
  password  String  // Hashed password
  createdAt DateTime @default(now()) // Timestamp when user is created
  updatedAt DateTime @updatedAt      // Automatically updates on change
}
